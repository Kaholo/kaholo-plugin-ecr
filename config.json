{
  "name": "AWS-ECR",
  "viewName": "AWS ECR",
  "description": "Amazon Elastic Container Registry - managed cloud container registry",
  "type": "executer",
  "main": "app.js",
  "execProgram": "node",
  "exposeRoute": false,
  "imgUrl": "logo.png",
  "version": "2.0.2",
  "category": ["Containers"],
  "keywords": [
    "aws",
    "ecr",
    "registry",
    "elastic",
    "container",
    "image",
    "docker",
    "push",
    "pull",
    "repository",
    "cloud"
  ],
  "settings" : [
    {
      "name": "accessKeyId",
      "viewName": "Default AWS Access key",
      "type": "vault"
    },
    {
      "name": "secretAccessKey",
      "viewName": "Default AWS Secret key",
      "type": "vault"
    },
    {
      "name": "region",
      "viewName": "Default AWS Region",
      "type": "string"
    }
  ],
  "methods": [
    {
      "name": "describeRepositories",
      "viewName": "Describe ECR Repositories",
      "params": [
        {
          "name": "accessKeyId",
          "viewName": "AWS Access Key",
          "type": "vault"
        },
        {
          "name": "secretAccessKey",
          "viewName": "AWS Secret Key",
          "type": "vault"
        },
        {
          "name": "region",
          "viewName":"AWS Region",
          "type": "autocomplete",
          "autocompleteType": "function",
          "functionName": "listRegions"
        },
        {
          "name": "registryId",
          "viewName": "Registry ID",
          "description": "The 12-digit registryId or the full string for the ECR repository or any image within",
          "type": "string"
        }
      ]
    },
    {
      "name": "getEcrLogin",
      "viewName": "Get Authorization Token",
      "params": [
        {
          "name": "accessKeyId",
          "viewName": "Access key",
          "type": "vault"
        },
        {
          "name": "secretAccessKey",
          "viewName": "Secret key",
          "type": "vault"
        },
        {
          "name": "region",
          "viewName":"Region",
          "type": "autocomplete",
          "autocompleteType": "function",
          "functionName": "listRegions"
        },
        {
          "name": "registryIds",
          "viewName": "Registry IDs (Array)",
          "type": "string"
        }
      ]
    },
    {
      "name": "pushImageToRepo",
      "viewName": "Push Image to ECR",
      "params": [
        {
          "name": "accessKeyId",
          "viewName": "AWS Access Key",
          "type": "vault"
        },
        {
          "name": "secretAccessKey",
          "viewName": "AWS Secret Key",
          "type": "vault"
        },
        {
          "name": "region",
          "viewName":"AWS Region",
          "type": "autocomplete",
          "autocompleteType": "function",
          "functionName": "listRegions"
        },
        {
          "name": "imageName",
          "viewName": "Image",
          "description": "Local image to push - must be tagged registry/repository:tag where registry is an ECR",
          "placeholder": "780631212317.dkr.ecr.eu-central-1.amazonaws.com/appliciotomus:latest",
          "type": "string"
        }
      ]
    },
    {
      "name": "pullImage",
      "viewName": "Pull Image from ECR",
      "params": [
        {
          "name": "accessKeyId",
          "viewName": "AWS Access Key",
          "type": "vault"
        },
        {
          "name": "secretAccessKey",
          "viewName": "AWS Secret Key",
          "type": "vault"
        },
        {
          "name": "region",
          "viewName":"AWS Region",
          "type": "autocomplete",
          "autocompleteType": "function",
          "functionName": "listRegions"
        },
        {
          "name": "imageName",
          "viewName": "Image",
          "description": "ECR image to pull - use registry/repository:tag where registry is an ECR",
          "placeholder": "780631212317.dkr.ecr.eu-central-1.amazonaws.com/appliciotomus:latest",
          "type": "string"
        }
      ]
    }
  ]
}
